<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <servlet>
    <servlet-name>Social_Event_Planner</servlet-name>
    <servlet-class>com.sep.Social_Event_PlannerServlet</servlet-class>
  </servlet>
   <servlet>
    <servlet-name>GoogleHandler</servlet-name>
    <servlet-class>com.sep.GoogleHandler</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>InvitationHandler</servlet-name>
    <servlet-class>com.sep.InvitationHandler</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RecommendGiftHandler</servlet-name>
    <servlet-class>com.sep.RecommendGiftHandler</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>GoogleOpenIdHandler</servlet-name>
    <servlet-class>com.sep.GoogleOpenIdHandler</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LinkedInHandler</servlet-name>
    <servlet-class>com.sep.LinkedInHandler</servlet-class>
  </servlet>
<servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>com.sep.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/LogoutServlet</url-pattern>
  </servlet-mapping>  
  <servlet-mapping>
    <servlet-name>LinkedInHandler</servlet-name>
    <url-pattern>/LinkedInHandler</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GoogleOpenIdHandler</servlet-name>
    <url-pattern>/GoogleOpenIdHandler</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>InvitationHandler</servlet-name>
    <url-pattern>/InvitationHandler</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GoogleHandler</servlet-name>
    <url-pattern>/GoogleHandler</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RecommendGiftHandler</servlet-name>
    <url-pattern>/RecommendGiftHandler</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Social_Event_Planner</servlet-name>
    <url-pattern>/Social_Event_Planner</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>LogFilter</filter-name>
    <filter-class>
        com.socio.sep.openid.filter.LogFilter
    </filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LogFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>